{minimum_otp_vsn, "19"}.
{plugins, [rebar3_appup_plugin]}.
{provider_hooks, [
    {pre, [{tar, {appup, tar}}]},
    {post, [{compile, {appup, compile}},
            {clean, {appup, clean}}]}
]}.

{erl_opts, [
            debug_info,
            warn_export_all,
            warn_unused_import,
            warn_unused_vars, 
            nowarn_shadow_vars,
            warnings_as_errors,
            {i, ["include"]},
            {src_dirs, ["src"]}
]}.

{deps, []}.

{relx, [{release, { efuns, "0.1.0" },
         [efuns,
          sasl]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, false},
        {include_erts, true},
        {system_libs, true},
        {extended_start_script, true}]
}.